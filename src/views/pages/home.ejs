  <body>
    <div class="container">
      <h1 class="h3 font-weight-normal">Welcome, <%= user.username %></h1>
      <div class="container searchContainer">
        <div class="dropdown dropdownBtn">
          <button
            class="btn dropdown-toggle"
            type="button"
            id="dropdownMenuButton"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            author
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a
              class="dropdown-item"
              id="author"
              onclick="setSearch('author')"
              href="#"
              >Author</a
            >
            <a
              class="dropdown-item"
              id="title"
              onclick="setSearch('title')"
              href="#"
              >Title</a
            >
            <a
              class="dropdown-item"
              id="description"
              onclick="setSearch('content')"
              href="#"
              >Content</a
            >
          </div>
        </div>
        <input
          type="text"
          name="searchTerm"
          id="inputSearch"
          class="inputField"
          placeholder="Search"
          required
        />

        <button
          onclick="search()"
          class="searchBtn btn"
          id="search"
          type="submit"
        >
          <i class="fas fa-search"></i>
        </button>
      </div>
      <div class="container">
        <% posts.forEach( (post) => { %>
        <div class="container postContainer">
          <h3><%= post.title %></h3>
          <p
            onclick="showAll('<%= post.id %>')"
            id="<%= post.id %>"
            class="postBodyWithClamp"
          >
            <%= post.description %>
          </p>
          <p class="author">- <%= post.author %> -</p>
        </div>
        <% }); %>
      </div>
    </div>
  </body>

